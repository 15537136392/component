<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <title>复选列表渲染（初始化选中）</title>
  <link href="../lib/pretty/prettify.css" type="text/css" rel="stylesheet" />
  <link rel="stylesheet" type="text/css" href="../css/tablepay.css" media="all">
  <link rel="stylesheet" type="text/css" href="../css/common.css" media="all">
  <link rel="stylesheet" type="text/css" href="../lib/dialog/6.0.4/css/ui-dialog.css">
  <link rel="stylesheet" type="text/css" href="../css/business.css">
  <script src="../lib/jquery/1.8.1/jquery.js"></script>
  <script src="../lib/pretty/prettify.js"></script>
  <script src="../lib/datepicker/4.8.b2/WdatePicker.js"></script>
  <script src="../lib/underscore/1.8.3/m.js"></script>
  <script src="../lib/validate/1.13.1/jquery.validate.min.js"></script>
  <script src="../lib/dialog/6.0.4/dialog-plus.js"></script>
  <script src="../lib/handlebars/1.3.0/handlebars.js"></script>
  <script src="../common/config.js"></script>
  <script src="../common/common.js"></script>

  <script type="text/javascript">

    $(function(){
      //用setTimeout模拟ajax请求获取onJobArr数据
      setTimeout(function(){
        json.onJobArr = [1, 3, 4];
        Util.ajax.loadTemp($('#J_list'), $('#T_list'), json);
      },200);
      
    });

    var json = {
      list:[
        {name:'张三', className:'一班', id:1}, 
        {name:'李四', className:'三班', id:2}, 
        {name:'王五', className:'二班', id:3}, 
        {name:'赵六', className:'二班', id:4}, 
        {name:'孙七', className:'一班', id:5}, 
        {name:'武八', className:'三班', id:6}, 
      ]
    }

    Handlebars.registerHelper('isExists', function(val, arr) {
      var exists = false;
      for (var i=0; i<arr.length; i++){
        if (arr[i] == val){
          exists = true;
          break;
        }
      }
      return exists ? 'checked' : '';
    });

  </script>
</head>
<body id="main_body" onload="prettyPrint()">
  <div class="standard">
    <H1>复选列表渲染（初始化选中）</H1>
    <!--<p><strong>示例</strong></p>-->
    <div>
  		<table class="ui-record-table table_radius table-bordered table-striped">
  			<thead>
  				<tr>
            <th><input type="checkbox" /></th>
    				<th>名称</th>
    				<th>班级</th>
    			</tr>
  			</thead>
  			<tbody id="J_list">
  				
  			</tbody>
  		</table>
    </div>

    <script type="text/template" id="T_list">
      {{#each list}}
      <tr>
        <td><input type="checkbox" value="{{@index}}" {{isExists id ../onJobArr}} /></td>
        <td>{{name}}</td>
        <td>{{className}}</td>
      </tr>
      {{/each}}
    </script>

    <p><strong>html代码</strong></p>
    <pre class="prettyprint mg_t_20 fn-clear" id="html">
      &lt;table class="ui-record-table table_radius table-bordered table-striped">
        &lt;thead>
          &lt;tr>
            &lt;th>&lt;input type="checkbox" />&lt;/th>
            &lt;th>名称&lt;/th>
            &lt;th>班级&lt;/th>
          &lt;/tr>
        &lt;/thead>
        &lt;tbody id="J_list">
          
        &lt;/tbody>
      &lt;/table>
    </pre>    
    
    <p><strong>js代码</strong></p>
    <pre class="prettyprint mg_t_20 fn-clear" id="html">
      $(function(){
        //用setTimeout模拟ajax请求获取onJobArr数据
        setTimeout(function(){
          json.onJobArr = [1, 3, 4];
          Util.ajax.loadTemp($('#J_list'), $('#T_list'), json);
        },200);
        
      });

      var json = {
        list:[
          {name:'张三', className:'一班', id:1}, 
          {name:'李四', className:'三班', id:2}, 
          {name:'王五', className:'二班', id:3}, 
          {name:'赵六', className:'二班', id:4}, 
          {name:'孙七', className:'一班', id:5}, 
          {name:'武八', className:'三班', id:6}, 
        ]
      }
 
      Handlebars.registerHelper('isExists', function(val, arr) {
        var exists = false;
        for (var i=0; i&lt;arr.length; i++){
          if (arr[i] == val){
            exists = true;
            break;
          }
        }
        return exists ? 'checked' : '';
      });

    </pre>
  </div>
</body>
</html>

